<window type="dialog" id="142">
	<defaultcontrol always="true">1</defaultcontrol>
	<include>dialogeffect</include>
	<controls>

		<control type="group">
			<posx>0</posx>
			<posy>620</posy>
			<width>1280</width>
			<height>159</height>

			<animation type="Visible">
				<effect type="fade" time="400" start="0" end="100" />
				<effect type="slide" time="400" start="0,151" end="0,0" easing="out" tween="cubic" />
			</animation>
			<animation type="Hidden">
				<effect type="fade" time="400" start="100" end="0" />
				<effect type="slide" time="400" start="0,0" end="0,151" easing="in" tween="cubic" />
			</animation>
			<animation type="WindowOpen">
				<effect type="fade" time="400" start="0" end="100" />
				<effect type="slide" time="400" start="0,151" end="0,0" easing="out" tween="cubic" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" time="400" start="100" end="0" />
				<effect type="slide" time="400" start="0,0" end="0,151" easing="in" tween="cubic" />
			</animation>

			<control type="image">
				<description>Panel</description>
				<posx>0</posx>
				<posy>0</posy>
				<height>159</height>
				<width>1280</width>
				<colordiffuse>cdffffff</colordiffuse>
				<texture>osd/osd_back.png</texture>
			</control>

			<control type="progress" id="23">
				<description>Progressbar</description>
				<posx>112</posx>
				<posy>40</posy>
				<width>1057</width>
				<height>15</height>
				<info>Player.Progress</info>
				<texturebg>osd/osd_progress_back.png</texturebg>
				<lefttexture>osd/osd_progress_left.png</lefttexture>
				<midtexture>osd/osd_progress_mid.png</midtexture>
				<righttexture>osd/osd_progress_right.png</righttexture>
				<overlaytexture>-</overlaytexture>
				<include>Animation_CommonFade</include>				
			</control>

			<control type="label">
				<posx>30</posx>
				<posy>36</posy>
				<width>300</width>
				<height>25</height>
				<font>Font_OSDTime</font>
				<colordiffuse>d0FFFFFF</colordiffuse>
				<label>$INFO[VideoPlayer.Time]</label>
			</control>

			<control type="label">
				<posx>30</posx>
				<posy>65</posy>
				<width>300</width>
				<height>25</height>
				<font>Font_OSDTime</font>
				<colordiffuse>d0FFFFFF</colordiffuse>
				<label>CURRENT TIME: $INFO[System.Time]</label>
			</control>
			
			<control type="label">
				<posx>0</posx>
				<posy>64</posy>
				<width>1280</width>
				<height>25</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>Font_OSDMusicTitle</font>
				<label>$INFO[VideoPlayer.Title]</label>			
				<animation effect="slide" start="0,0" end="0,-12" time="200" condition="Control.IsVisible(212)">Conditional</animation>			
			</control>

			<control type="label">
				<posx>1250</posx>
				<posy>36</posy>
				<width>300</width>
				<height>25</height>
				<align>right</align>
				<font>Font_OSDTime</font>
				<colordiffuse>d0FFFFFF</colordiffuse>
				<label>$INFO[VideoPlayer.Duration]</label>
			</control>

			<control type="label">
				<posx>1250</posx>
				<posy>65</posy>
				<width>300</width>
				<height>25</height>
				<align>right</align>
				<font>Font_OSDTime</font>
				<colordiffuse>d0FFFFFF</colordiffuse>
				<label>FINISH TIME: $INFO[Player.FinishTime]</label>
			</control>
		</control>
	</controls>
</window>